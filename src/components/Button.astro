---
const {variant, size} = Astro.props
---

<button class= {variant + " " + size}>
    <slot />
</button>

<style>
    button {
        padding: 10px 20px;
        border-radius: 32px;
        border: 1px solid white;
    }

    .primary{
        background-color: black;
        color: white;
    }

    .secondary{
        background-color: black;
        color: white;
    }

    .small{
        font-size: 1rem;
    }

    .medium{
        font-size: 1rem;
    }


</style>