<style>

@media (max-width: 800px) {
    button {
        display: none;
    }
}

@media (max-width: 800px) {
    .display-desktop {
        display: none;
    }
}

.display-mobile {
    width: 200px;
    margin: 20px auto 0px;
    margin-right: auto;
}
@media (min-width: 800px) {
    .display-mobile {
        display: none;
    }
}
        
    header {
        display: flex;
        z-index: 100;
        padding-top: 20px;
        position: relative;
    }


    header nav {
        display: flex;
        align-items: center;
        gap: 20px;
    }

    header a {
        font-size: 18px;
        text-decoration: none;
        color: #fff;
    }
    
    header nav ul {
        padding: 0;
        list-style: none;
        display: none;
        margin: 0;
        }

    header nav ul li {
       margin: auto;
    }

    header nav ul li a.active {
        /* color: #fff; */
        opacity: 0.6;
    }

    header nav ul li a:hover {
        /* color: #fff; */
        opacity: 0.6;
    }

    /*
    * Dropdown
    */
    .dropdown {
        display: flex;
        flex-direction: column;
        display: inline-block;
    }

    @media (min-width: 800px) {
    .dropdown {
        position: relative;
    }
    }
    .dropdown svg {
        height: 18px;
        width: 18px;
        position: relative;
        top: 2px;
    }

    /* Style for the dropdown button */
    .dropdown-btn {
        cursor: pointer;
        margin: 0;
        font-size: 18px;
        padding: 10px 20px;
        border-radius: 32px;
        border: 1px solid transparent;
    }

    .dropdown-btn svg {
        transition: all 0.4s ease-in-out;
    }

    .dropdown-btn:hover svg {
        transform: rotate(180deg);
    }

    @media (max-width: 800px) {
    /* Style for the dropdown content */
    .dropdown-content {
        display: block!important;
        position: relative;
        top: 4%;
        left: 0;
        padding-left: 0;
        }
    }

    @media (min-width: 800px) {
    .dropdown-content {
        display: none;
        position: absolute;
        min-width: 160px;
        z-index: 1;
        /* top: 100%; */
        left: -5px;
    
        background: #000;
        padding: 10px !important;
        border-radius: 32px;
        border: 1px solid transparent;
        margin-top: 10px !important;
      }
    }

    .dropdown-content a {
        font-size: 20px;
        padding: 12px 16px;
    }

    .dropdown-content a.active {
        display: block;
        color: #fff;
        opacity: 0.6;
    }

    /* Style for the dropdown items */
    .dropdown-item {
        padding: 12px 16px;
        display: block;
        cursor: pointer;
        /* top: 15px; */
        position: relative;
        padding-top: 0;
    }

    .dropdown-item:hover {
        opacity: 0.6;
    }

    /* Show the dropdown content on hover */
    .dropdown:hover .dropdown-content {
        display: block;
    }
    .dropdown:hover .dropdown-btn svg {
        transform: rotate(180deg);
    }

    .logo {
        margin-right: auto;
    }
    
    .logo img {
        width: 100px;
    }


/*
* Burgermenu
*/
@media (max-width: 800px) {
  .inner-header {
    display: flex;
    order: 1;
  }

  .burger-menu {
    margin-left: auto;
  }

  .menu-opened .active-show {
    display: flex!important;
    position: absolute;
    background: #fff;
    width: 100%;
    margin-top: 70px;
    flex-direction: column;
    padding: 10px 0;
    text-align: center;
  }

  .active-show {
    display: none !important;;
  }

  .active-show ul {
    list-style: none;
    flex-direction: column;
    /* background-color: red; */
    text-align: center;
    margin: 10px auto;
    gap: 20px;
  }

  .active-show li {
    margin-bottom: 10px;
  }
  .active-show a {
    text-decoration: none;
    color: #000;
    font-size: 24px;
  }

  .menu-icon {
    display: inline-block;
    cursor: pointer;
    margin: 10px;
  }

  .bar {
    width: 35px;
    height: 3px;
    background: #fff;
    margin: 6px 0;
    transition: 0.4s;
  }

  .bar-1 {
    background-image: url(../public/burger-1.png);
    width: 100%;
    width: 30px;
    height: 8px;
    margin-left: auto;
  }
  .bar-2 {
    background-image: url(../public/burger-2.png);
    width: 100%;
    width: 40px;
    height: 8px;
    margin-left: auto;
  }
  .bar-3 {
    background-image: url(../public/burger-3.png);
    width: 100%;
    width: 50px;
    height: 8px;
  }


  .menu-opened .bar-1 {
    display: none;
  
  }

  .menu-opened .bar-2 {
    display: none;
  }

  .menu-opened .bar-3 {
    transform: rotate(45deg) translate(-5px, -6px);
    margin-top: 30px;
  }
}
.order {
  order: -1;
}
@media (min-width: 800px) {
  .order {
    order: inherit;
  }
}

</style>

<script>
    /*
    * Burgermenu
    */
    document.addEventListener("DOMContentLoaded", function () {
    const menuIcon = document.getElementById("menu-icon");
    const active = document.getElementById("active-menu");

    menuIcon.addEventListener("click", function () {
        active.classList.toggle("menu-opened");
    });
    });

    
</script>